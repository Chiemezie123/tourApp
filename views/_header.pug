header.header
    nav.nav.nav--tours    
        a.nav__el(href='/') All tours
    .header__logo
        img(src="/img/logo-white.png", alt="Natours logo")
    nav.nav.nav--user
        if user
            a.nav__el.logout logout
            a.nav__el(href='/userAccount')
                img.overview-box__img(src=`/img/users/${user.photo}`, alt="User photo")
                span=`${user.name.split(' ')[0]}`
        else
            a.nav__el.nav__el--cta(href="/login") Log in
            a.nav__el.nav__el--cta(href="/sign up") sign up